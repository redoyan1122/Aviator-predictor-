<!DOCTYPE html>
<html lang="bn">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Avatar Prediction</title>
<style>
  body {
    font-family: 'SolaimanLipi', Arial, sans-serif;
    background: #f5f5f5;
    padding: 30px;
    text-align: center;
  }
  #prediction-section {
    margin-top: 20px;
    font-size: 20px;
    color: #006400;
    font-weight: bold;
  }
  button {
    padding: 12px 20px;
    font-size: 18px;
    cursor: pointer;
  }
  input[type="password"] {
    padding: 10px;
    font-size: 18px;
    margin-top: 15px;
    width: 250px;
  }
</style>
</head>
<body>

<h1>Avatar Prediction</h1>

<button id="showPredictionBtn">প্রেডিকশন দেখতে এখানে ক্লিক করুন</button>

<div id="passwordPrompt" style="display:none; margin-top: 20px;">
  <input type="password" id="passwordInput" placeholder="পাসওয়ার্ড লিখুন" />
  <br />
  <button id="submitPasswordBtn" style="margin-top: 10px;">জমা দিন</button>
</div>

<div id="prediction-section" style="display:none;"></div>

<script>
  const correctPassword = "avatar2025";  // তুমি এখানে তোমার পাসওয়ার্ড সেট করতে পারো
  const predictionText = "প্রফিট রেঞ্জ: এই পয়েন্ট থেকে এই পয়েন্টের মধ্যে — সময়মতো ক্যাশআউট করুন!";

  const showPredictionBtn = document.getElementById('showPredictionBtn');
  const passwordPrompt = document.getElementById('passwordPrompt');
  const passwordInput = document.getElementById('passwordInput');
  const submitPasswordBtn = document.getElementById('submitPasswordBtn');
  const predictionSection = document.getElementById('prediction-section');

  showPredictionBtn.addEventListener('click', () => {
    passwordPrompt.style.display = 'block';
    predictionSection.style.display = 'none';
    passwordInput.value = '';
    passwordInput.focus();
  });

  submitPasswordBtn.addEventListener('click', () => {
    const enteredPassword = passwordInput.value.trim();
    if(enteredPassword === correctPassword) {
      passwordPrompt.style.display = 'none';
      predictionSection.style.display = 'block';
      predictionSection.textContent = predictionText;
    } else {
      alert('পাসওয়ার্ড ভুল হয়েছে! আবার চেষ্টা করুন।');
      passwordInput.value = '';
      passwordInput.focus();
    }
  });

  // Optional: Enter key submits password
  passwordInput.addEventListener('keydown', (e) => {
    if(e.key === 'Enter') {
      submitPasswordBtn.click();
    }
  });
</script>

</body>
</html>
